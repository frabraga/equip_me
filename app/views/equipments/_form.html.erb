<%= simple_form_for(@equipment, url: equipments_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: "Kitesurf" %>
    <%= f.input :description, placeholder: "Most badass Kitesurf ever"  %>
    <%= f.input :price, placeholder: "150"  %>
    <%= f.input :category, placeholder: "Kiting"  %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
